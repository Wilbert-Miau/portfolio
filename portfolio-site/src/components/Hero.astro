---
import heroImage from '../assets/images/hero.jpg';
---

<section class="hero">
  <div class="container hero-wrapper">
    <div class="hero-content">
      <div class="badge">Available for new opportunities</div>
      <h1>
        Backend & Infrastructure <br />
        <span class="text-accent">Developer</span>
      </h1>
      <p class="subtitle">
        I build systems that save money, run fast, and never go down. 
        2+ years turning infrastructure into competitive advantage through strategic optimization and event-driven architecture.
      </p>
      <div class="cta-group">
        <a href="#projects" class="btn btn-primary">View Projects</a>
        <a href="#contact" class="btn btn-secondary">Contact Me</a>
        <a href="/Wilbert-Castillo-Infrastructure-Engineer-Resume.pdf" download class="btn btn-download">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="7 10 12 15 17 10"></polyline>
            <line x1="12" y1="15" x2="12" y2="3"></line>
          </svg>
          Download Resume
        </a>
      </div>
    </div>
    
    <div class="hero-image">
      <div class="image-frame">
        <img src={heroImage.src} alt="Wilbert Castillo" />
      </div>
    </div>
  </div>
  
  <div class="background-glow"></div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    padding-top: 70px; /* Navbar height */
  }

  .hero-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 4rem;
    position: relative;
    z-index: 10;
  }

  .hero-content {
    flex: 1;
    max-width: 600px;
  }

  .hero-image {
    flex-shrink: 0;
  }

  .image-frame {
    position: relative;
    width: 380px;
    height: auto;
    aspect-ratio: 1;
    border-radius: 20px;
    overflow: hidden;
    border: 2px solid var(--color-border);
    box-shadow: 
      0 25px 50px -12px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(59, 130, 246, 0.1);
    background: rgba(10, 10, 20, 0.5);
  }

  .image-frame::before {
    content: '';
    position: absolute;
    inset: -2px;
    background: linear-gradient(135deg, var(--color-accent), transparent 50%, var(--color-accent));
    z-index: -1;
    border-radius: 22px;
    opacity: 0.5;
  }

  .image-frame img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .image-frame:hover img {
    transform: scale(1.02);
  }

  @media (max-width: 900px) {
    .hero-wrapper {
      flex-direction: column-reverse;
      text-align: center;
      gap: 2rem;
    }

    .hero-content {
      max-width: 100%;
    }

    .image-frame {
      width: 280px;
    }

    .cta-group {
      justify-content: center;
    }
  }

  .badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(59, 130, 246, 0.1);
    color: var(--color-accent);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  h1 {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .subtitle {
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    max-width: 600px;
    margin-bottom: 2.5rem;
    color: var(--color-text-muted);
  }

  .cta-group {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .btn-primary {
    background: var(--color-accent);
    color: white;
  }

  .btn-primary:hover {
    background: #2563eb;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4);
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-accent);
    border: 2px solid var(--color-accent);
  }

  .btn-secondary:hover {
    background: rgba(59, 130, 246, 0.1);
    transform: translateY(-2px);
  }

  .btn-download {
    background: rgba(59, 130, 246, 0.15);
    color: var(--color-accent);
    border: 1px solid rgba(59, 130, 246, 0.3);
    gap: 0.5rem;
  }

  .btn-download:hover {
    background: rgba(59, 130, 246, 0.25);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.2);
  }

  .btn-download svg {
    flex-shrink: 0;
  }

  .background-glow {
    position: absolute;
    top: 50%;
    right: -10%;
    transform: translateY(-50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.15) 0%, rgba(10, 10, 10, 0) 70%);
    pointer-events: none;
    z-index: 1;
  }
</style>
