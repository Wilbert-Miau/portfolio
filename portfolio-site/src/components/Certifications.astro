---
// Logo URLs for certification issuers
const issuerLogos: Record<string, string> = {
  "Johns Hopkins University": "https://brand.jhu.edu/assets/uploads/sites/5/2014/06/university.logo_.small_.vertical.blue_.png",
  "University of California, Irvine": "https://brand.uci.edu/wp-content/uploads/2022/11/UCI-logo-mark.png",
  "Packt": "https://static.packt-cdn.com/assets/images/favicon.png",
  "Coursera": "https://d3njjcbhbojbot.cloudfront.net/api/utilities/v1/imageproxy/https://coursera.s3.amazonaws.com/media/coursera-logo-square.png",
  "EF SET": "https://www.efset.org/favicon-32x32.png"
};

const certs = [
  {
    title: "Linear Algebra: Linear Systems and Matrix Equations",
    issuer: "Johns Hopkins University",
    date: "Aug 2025",
    tags: ["Math", "Deep Tech"]
  },
  {
    title: "Functions, Methods, and Interfaces in Go",
    issuer: "University of California, Irvine",
    date: "Jan 2025",
    tags: ["Go", "Backend"]
  },
  {
    title: "Foundations of Elasticsearch",
    issuer: "Packt",
    date: "Dec 2024",
    tags: ["Database", "Search"]
  },
  {
    title: "Getting Started with Terraform for Google Cloud",
    issuer: "Coursera",
    date: "Jun 2023",
    tags: ["GCP", "IaC"]
  },
  {
    title: "Cloud Virtualization, Containers and APIs",
    issuer: "Coursera",
    date: "Apr 2023",
    tags: ["Docker", "Cloud"]
  },
  {
    title: "DevOps on AWS: Code, Build, and Test",
    issuer: "Coursera",
    date: "Dec 2022",
    tags: ["AWS", "DevOps"]
  },
  {
    title: "EF SET Certificate C2 Proficient",
    issuer: "EF SET",
    date: "Jan 2023",
    tags: ["English", "Communication"]
  },
  {
    title: "Introduction to Scrum Master Training",
    issuer: "Coursera",
    date: "Apr 2023",
    tags: ["Agile", "Management"]
  }
];
---

<section id="certifications" class="section">
  <div class="container">
    <h2 class="section-title">Certifications</h2>
    
    <div class="certs-grid">
      {certs.map(cert => (
        <div class="cert-card">
          <div class="cert-header">
            <h3>{cert.title}</h3>
            <div class="issuer-row">
              <img 
                src={issuerLogos[cert.issuer]} 
                alt={`${cert.issuer} logo`} 
                class="issuer-logo"
                loading="lazy"
              />
              <span class="issuer">{cert.issuer}</span>
            </div>
          </div>
          <div class="cert-footer">
            <span class="date">{cert.date}</span>
            <div class="tags">
              {cert.tags.map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="cta-container">
      <a href="https://www.linkedin.com/in/wilbert-castillo-nolasco-00a0b9216/details/certifications/" target="_blank" rel="noopener noreferrer" class="btn-linkedin">
        View More & Verify on LinkedIn
      </a>
    </div>
  </div>
</section>

<style>
  .section-title {
    font-size: 2rem;
    margin-bottom: 3rem;
    position: relative;
    display: inline-block;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 60px;
    height: 4px;
    background: var(--color-accent);
    border-radius: 2px;
  }

  .certs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .cert-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: transform 0.2s ease, border-color 0.2s ease;
  }

  .cert-card:hover {
    transform: translateY(-3px);
    border-color: var(--color-accent);
  }

  .cert-header h3 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: #fff;
    line-height: 1.4;
  }

  .issuer-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .issuer-logo {
    width: 28px;
    height: 28px;
    object-fit: contain;
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.1);
    padding: 3px;
    flex-shrink: 0;
  }

  .issuer {
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .cert-footer {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .date {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.2rem 0.6rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
    color: var(--color-text-muted);
  }

  .cta-container {
    text-align: center;
  }

  .btn-linkedin {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    background: #0077b5;
    color: white;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .btn-linkedin:hover {
    background: #006399;
    transform: translateY(-2px);
  }
</style>
