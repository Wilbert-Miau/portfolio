---
const skills = {
  platform: [
    "Docker & Containerization",
    "MinIO Object Storage",
    "Caddy Reverse Proxy",
    "Self-hosted GitHub Actions",
    "Linux Servers",
    "VMware vSphere",
    "Windows Server"
  ],
  cloud: [
    "AWS (CloudFront, S3, EC2)",
    "Azure Fundamentals",
    "GCP Basics"
  ],
  realtime: [
    "Asterisk Manager Interface (AMI)",
    "MediaMTX Streaming",
    "SignalR WebSockets",
    "RabbitMQ Message Broker"
  ],
  backend: [
    "C# .NET APIs",
    "Python / FastAPI",
    "Go (Golang)",
    "SQL Server Optimization",
    "Event-Driven Architecture"
  ],
  monitoring: [
    "Sentry Error Tracking",
    "Grafana Dashboards"
  ],
  management: [
    "Problem Solving & Root Cause Analysis",
    "Cross-Functional Collaboration",
    "Strategic Cost Optimization",
    "Technical Documentation",
    "Adaptability"
  ]
};
---

<section id="skills" class="section">
  <div class="container">
    <h2 class="section-title">Skills & Expertise</h2>
    
    <div class="skills-grid">
      <!-- Platform Services -->
      <div class="skill-category">
        <h3>Platform Services</h3>
        <div class="skill-list">
          {skills.platform.map(skill => (
            <div class="skill-tag">{skill}</div>
          ))}
        </div>
      </div>

      <!-- Cloud & Platform -->
      <div class="skill-category">
        <h3>Cloud Platforms</h3>
        <div class="skill-list">
          {skills.cloud.map(skill => (
            <div class="skill-tag">{skill}</div>
          ))}
        </div>
      </div>

      <!-- Real-Time Systems -->
      <div class="skill-category">
        <h3>Real-Time Systems</h3>
        <div class="skill-list">
          {skills.realtime.map(skill => (
            <div class="skill-tag">{skill}</div>
          ))}
        </div>
      </div>

      <!-- Backend Development -->
      <div class="skill-category">
        <h3>Backend Development</h3>
        <div class="skill-list">
          {skills.backend.map(skill => (
            <div class="skill-tag">{skill}</div>
          ))}
        </div>
      </div>

      <!-- Monitoring & Security -->
      <div class="skill-category">
        <h3>Monitoring & Security</h3>
        <div class="skill-list">
          {skills.monitoring.map(skill => (
            <div class="skill-tag">{skill}</div>
          ))}
        </div>
      </div>

      <!-- Management -->
      <div class="skill-category highlight">
        <h3>Management & Soft Skills</h3>
        <div class="skill-list">
          {skills.management.map(skill => (
            <div class="skill-tag">{skill}</div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .section-title {
    font-size: 2rem;
    margin-bottom: 3rem;
    position: relative;
    display: inline-block;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 60px;
    height: 4px;
    background: var(--color-accent);
    border-radius: 2px;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .skill-category {
    background: var(--color-surface);
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid var(--color-border);
    transition: transform 0.2s ease;
  }

  .skill-category:hover {
    transform: translateY(-5px);
    border-color: var(--color-accent);
  }

  .skill-category.highlight {
    background: linear-gradient(145deg, var(--color-surface), rgba(59, 130, 246, 0.05));
    border-color: rgba(59, 130, 246, 0.2);
  }

  .skill-category h3 {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    color: var(--color-accent);
  }

  .skill-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .skill-tag {
    background: rgba(255, 255, 255, 0.05);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.9rem;
    color: var(--color-text);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
</style>
